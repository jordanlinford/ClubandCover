  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.3.0",
    "@prisma/client": "^6.2.0",
    "@repo/types": "workspace:*",
    "@supabase/supabase-js": "^2.48.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "resend": "^6.4.1",
    "stripe": "^19.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.16.11",
    "esbuild": "^0.25.0",
    "prisma": "^6.2.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2"
  }
}
