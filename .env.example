# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/clubandcover

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Authentication
SESSION_SECRET=your-random-secret-key-min-32-characters
JWT_SECRET=your-jwt-secret-key-here

# Stripe Payment Processing (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Service (Resend)
RESEND_API_KEY=re_your_key_here

# OpenAI (Optional - for AI features)
OPENAI_API_KEY=sk-your_key_here

# Environment
NODE_ENV=development
PORT=5000

# URLs
APP_URL=http://localhost:5000
API_URL=http://localhost:5000/api
VITE_API_URL=http://localhost:5000/api

# Development Features
# Set to 'true' to enable auto-login bypass for local development/testing
# WARNING: Never enable this in production - it creates test tokens without Supabase
VITE_ENABLE_DEV_LOGIN=true
